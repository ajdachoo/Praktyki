@model Klient

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edytuj klienta</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Imię</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Surname">Nazwisko</label>
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pesel">PESEL</label>
            <input asp-for="Pesel" class="form-control" />
            <span asp-validation-for="Pesel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BirthYear">Rok urodzenia</label>
            <input asp-for="BirthYear" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Płeć">Płeć</label>
            <input asp-for="Płeć" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Zapisz</button>
    </div>
</form>